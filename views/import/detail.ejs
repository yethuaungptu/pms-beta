<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %>
  </head>
  <body>
    <!-- Start Homepage section-->
    <div class="wrapper">
      <!-- Sidebar -->
      <% include ../partial/sidebar %>
      <div class="main">
        <nav class="navbar navbar-expand px-3 border-bottom">
          <!--Button for sidebar toggle-->
          <button class="btn" type="button" data-bs-theme="dark">
            <span class="navbar-toggler-icon"></span>
          </button>
        </nav>
        <main class="content px-3 py-2">
          <div class="container-fluid">
            <h1>Import Detail</h1>
            <div class="row">
              <div class="col-lg-2"></div>
              <div class="col-lg-8">
                <div class="card">
                  <h3 class="card-title text-center my-3">
                    <%= importData.supplierId.companyName %>
                  </h3>
                  <div class="row text-center">
                    <div class="col-lg-6">
                      <p>
                        Supplier Name : <%= importData.supplierId.supplierName
                        %>
                      </p>
                    </div>
                    <div class="col-lg-6">
                      <p>Arrival Date : <%= importData.arrivalDate %></p>
                    </div>
                    <div class="col-lg-6">
                      <p>Total Amount : <%= importData.totalAmount %> MMK</p>
                    </div>
                    <div class="col-lg-6">
                      <p>Created Date : <%= importData.created %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row text-center mt-3">
              <% for(var i = 0; i < importData.list.length;i++){%>
              <div class="col-lg-4">
                <div class="card">
                  <h4 class="card-title">
                    <%= importData.list[i].itemId.name %>
                  </h4>
                  <div class="card-body row">
                    <div class="col">
                      Quantity : <%= importData.list[i].quantity %>
                    </div>
                    <div class="col">
                      Price : <%= importData.list[i].amount %>
                    </div>
                  </div>
                </div>
              </div>
              <%}%>
            </div>
          </div>
        </main>
      </div>
    </div>
  </body>
  <% include ../partial/script %>
</html>
